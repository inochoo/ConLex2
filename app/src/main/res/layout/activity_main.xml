<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />
    <TextView
        android:text="1"
        android:id="@+id/text1"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gl8"
        app:layout_constraintRight_toLeftOf="@+id/gl1"
        android:background="#c0c0c0"

        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:text="2"
        android:id="@+id/text2"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintLeft_toRightOf="@+id/text1"
        app:layout_constraintBottom_toTopOf="@+id/gl7"
        app:layout_constraintRight_toLeftOf="@+id/gl3"
        android:background="#8b0000"

        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:text="3"
        android:id="@+id/text3"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gl5"
        app:layout_constraintRight_toLeftOf="@+id/text2"
        android:background="#ffb6c1"

        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/text4"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/gl6"
        app:layout_constraintLeft_toRightOf="@id/text3"
        app:layout_constraintBottom_toTopOf="@+id/gl5"
        app:layout_constraintRight_toLeftOf="@+id/gl2"
        android:background="#c0c0c0"

        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:text="4"
        android:id="@+id/text5"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gl9"
        app:layout_constraintRight_toLeftOf="@+id/text2"
        android:background="#000"
        android:textColor="@color/white"

        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:text="5"
        android:id="@+id/text6"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constraintLeft_toLeftOf="@id/text4"
        app:layout_constraintBottom_toTopOf="@+id/gl9"
        app:layout_constraintRight_toLeftOf="@+id/gl2"
        android:background="#4169e1"

        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/text7"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gl2"
        android:background="#191970"

        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/text8"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text5"
        app:layout_constraintLeft_toRightOf="@+id/text7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#00ff7f"

        android:layout_width="0dp"
        android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>